
@{

}
    <div class="container">
        <div class="row">

            <div class="container">
                <div class="col-lg-12">
                    <br/>
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>id</th>
                                <th>date</th>
                                <th>title</th>
                                <th>details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.blogposts != null)
                            {
                                foreach (var item in ViewBag.blogposts)
                                {



                                    <tr>
                                        <td>@item.id </td>
                                        <td>@item.date</td>
                                        <td>@item.title</td>
                                        <td><a href="@Url.Action("blog", "Home",new { id = @item.id } )">details...</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
              </div>
            </div>
        </div>
